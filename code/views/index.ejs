<div class="main-container">
  <!-- Routes Card -->
  <div class="card-modern animate-fade-in">
    <div class="card-header-modern">
      <h2><i class="fa fa-sitemap"></i> Rutas Configuradas</h2>
      <div class="d-flex gap-2">
        <button type="button" class="btn-modern btn-modern-secondary" onclick="normalizeOrder()" title="Reorganizar órdenes secuencialmente">
          <i class="fa fa-sort-numeric-asc"></i> Normalizar
        </button>
        <button type="button" class="btn-modern btn-modern-secondary" onclick="openList()" style="position: relative;">
          <i class="fa fa-list"></i> Pendientes
          <% if (listaEspera.length > 0) { %>
          <span id="pendingBadge" class="pending-badge"><%=listaEspera.length %></span>
          <% } else { %>
          <span id="pendingBadge" class="pending-badge" style="display: none;">0</span>
          <% } %>
        </button>
        <button type="button" class="btn-modern btn-modern-primary" onclick="openModal('create')">
          <i class="fa fa-plus"></i> Nueva Ruta
        </button>
      </div>
    </div>
    <div class="card-body-modern">
      <!-- Filtros de tabla -->
      <div class="table-filters">
        <div class="filter-group">
          <label class="filter-label" for="filterMethod">Metodo</label>
          <select id="filterMethod" name="filterMethod" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="get">GET</option>
            <option value="post">POST</option>
            <option value="put">PUT</option>
            <option value="delete">DELETE</option>
            <option value="patch">PATCH</option>
            <option value="options">OPTIONS</option>
            <option value="head">HEAD</option>
            <option value="any">ANY</option>
          </select>
        </div>
        <div class="filter-group filter-group-large">
          <label class="filter-label" for="filterRouteValue">Ruta</label>
          <div class="filter-route-wrapper">
            <select id="filterRouteType" name="filterRouteType" class="filter-select filter-route-type" onchange="applyFilters()">
              <option value="contains">Contiene</option>
              <option value="startsWith">Empieza por</option>
              <option value="endsWith">Termina por</option>
              <option value="equals">Es igual a</option>
              <option value="regex">Regex</option>
            </select>
            <input type="text" id="filterRouteValue" name="filterRouteValue" class="filter-input" placeholder="Buscar ruta..." oninput="applyFilters()">
          </div>
        </div>
        <div class="filter-group">
          <label class="filter-label" for="filterType">Tipo Resp.</label>
          <select id="filterType" name="filterType" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="json">JSON</option>
            <option value="xml">XML</option>
            <option value="soap">SOAP</option>
            <option value="text">Texto</option>
            <option value="html">HTML</option>
            <option value="page">Page</option>
            <option value="file">Archivo</option>
            <option value="proxy">Proxy</option>
            <option value="empty">Empty</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label" for="filterCode">Codigo</label>
          <select id="filterCode" name="filterCode" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="2xx">2xx (Exito)</option>
            <option value="3xx">3xx (Redireccion)</option>
            <option value="4xx">4xx (Error cliente)</option>
            <option value="5xx">5xx (Error servidor)</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label" for="filterRegex">Regex</label>
          <select id="filterRegex" name="filterRegex" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="1">Si</option>
            <option value="0">No</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label" for="filterWait">Espera</label>
          <select id="filterWait" name="filterWait" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="1">Si</option>
            <option value="0">No</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label" for="filterActivo">Activo</label>
          <select id="filterActivo" name="filterActivo" class="filter-select" onchange="applyFilters()">
            <option value="">Todos</option>
            <option value="1">Si</option>
            <option value="0">No</option>
          </select>
        </div>
        <div class="filter-group filter-actions">
          <button class="btn-filter-clear" onclick="clearFilters()" title="Limpiar filtros">
            <i class="fa fa-times"></i> Limpiar
          </button>
        </div>
      </div>

      <div class="table-modern-wrapper">
        <table id="dtList" class="table-modern" style="width:100%">
          <thead>
            <tr>
              <th>id</th>
              <th>Orden</th>
              <th>Metodo</th>
              <th>Ruta</th>
              <th>Tipo</th>
              <th>Codigo</th>
              <th>Regex</th>
              <th>Espera</th>
              <th>Activo</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Terminal Card -->
  <div class="card-modern animate-fade-in" style="margin-top: 2rem;">
    <div class="card-body terminal" style="height: 650px; padding: 0; border-radius: var(--border-radius);">
      <div class="terminal-header">
        <div class="dots">
          <span class="dot red"></span>
          <span class="dot yellow"></span>
          <span class="dot green"></span>
        </div>
        <span class="title">Mock Server Terminal</span>
        <div class="terminal-actions">
          <button onclick="Terminal.clear()" title="Limpiar terminal">
            <i class="fa fa-trash"></i> Clear
          </button>
          <button onclick="Terminal.toggleAutoScroll()" id="btnAutoScroll" title="Auto-scroll">
            <i class="fa fa-arrow-down"></i> Auto
          </button>
          <button onclick="Terminal.exportLogs()" title="Exportar logs">
            <i class="fa fa-download"></i> Export
          </button>
        </div>
      </div>
      <div class="console">
        <div class="output" id="salidaconsola">
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Nueva/Editar Ruta -->
<div class="modal fade modal-modern" id="routesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titleModal"><i class="fa fa-route me-2"></i>Nueva Ruta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="idmodal" hidden></p>

        <!-- Tipo de Respuesta -->
        <div class="form-group-modern" id="divtresp">
          <label class="form-label-modern" for="tiporespuesta">Tipo de Respuesta</label>
          <select class="form-control-modern form-select-modern" onchange="checkRespuesta()" id="tiporespuesta" name="tiporespuesta">
            <option value="json" selected>JSON</option>
            <option value="xml">XML</option>
            <option value="soap">SOAP</option>
            <option value="text">Texto plano</option>
            <option value="html">HTML</option>
            <option value="page">Page (render)</option>
            <option value="file">Archivo</option>
            <option value="proxy">Proxy</option>
            <option value="empty">Sin Body</option>
          </select>
        </div>

        <!-- Metodo HTTP -->
        <div class="form-group-modern" id="divtipo">
          <label class="form-label-modern" for="tipoSelect">Metodo HTTP</label>
          <select class="form-control-modern form-select-modern" id="tipoSelect" name="tipoSelect">
            <option value="0" selected>GET</option>
            <option value="1">POST</option>
            <option value="2">PUT</option>
            <option value="3">DELETE</option>
            <option value="4">PATCH</option>
            <option value="5">OPTIONS</option>
            <option value="6">HEAD</option>
            <option value="7">ANY</option>
          </select>
        </div>

        <!-- Ruta -->
        <div class="form-group-modern" id="divruta">
          <label class="form-label-modern" for="ruta">Ruta</label>
          <div class="input-group-modern">
            <input type="text" class="form-control-modern" id="ruta" name="ruta" placeholder="/api/ejemplo"
              oninput="validateRegexIfEnabled()">
            <div class="input-addon">
              <input class="form-check-input me-2" type="checkbox" id="isRegex" name="isRegex" onchange="toggleRegexMode()">
              <label class="form-check-label" for="isRegex">Regex</label>
            </div>
          </div>
        </div>

        <!-- Validador Regex -->
        <div class="form-group-modern" id="divRegexValidator" style="display: none;">
          <label class="form-label-modern" for="regexTestUrl">Probar Regex</label>
          <div class="input-group-modern">
            <input type="text" class="form-control-modern" id="regexTestUrl" name="regexTestUrl" placeholder="/api/users/123" oninput="testRegex()">
            <button class="btn-modern btn-modern-secondary" type="button" onclick="testRegex()" style="border-radius: 0 var(--border-radius-sm) var(--border-radius-sm) 0;">
              Validar
            </button>
          </div>
          <div id="regexResult" class="mt-2"></div>
        </div>

        <!-- Codigo de Respuesta -->
        <div class="form-group-modern" id="divcodresp">
          <label class="form-label-modern" for="crespuestaInput">Codigo de Respuesta</label>
          <div class="d-flex gap-3 align-items-center">
            <input type="text" class="form-control-modern" id="crespuestaInput" name="crespuestaInput" list="httpCodes" value="200"
              oninput="updateCodeDescription()" autocomplete="off" style="max-width: 100px;">
            <span id="codeDescription" style="color: var(--text-secondary);">OK</span>
          </div>
          <datalist id="httpCodes">
            <option value="200">OK</option>
            <option value="201">Created</option>
            <option value="204">No Content</option>
            <option value="301">Moved Permanently</option>
            <option value="302">Found (Redirect)</option>
            <option value="304">Not Modified</option>
            <option value="400">Bad Request</option>
            <option value="401">Unauthorized</option>
            <option value="403">Forbidden</option>
            <option value="404">Not Found</option>
            <option value="405">Method Not Allowed</option>
            <option value="409">Conflict</option>
            <option value="422">Unprocessable Entity</option>
            <option value="429">Too Many Requests</option>
            <option value="500">Internal Server Error</option>
            <option value="502">Bad Gateway</option>
            <option value="503">Service Unavailable</option>
            <option value="504">Gateway Timeout</option>
          </datalist>
        </div>

        <!-- Respuesta -->
        <div class="form-group-modern" id="divresp">
          <div class="form-label-row">
            <label class="form-label-modern" for="respuesta">Respuesta</label>
            <button type="button" class="btn-modern btn-modern-secondary btn-sm" id="btnFormatJson" onclick="formatResponseJson()" title="Formatear JSON">
              <i class="fa fa-align-left"></i> Formatear
            </button>
          </div>
          <textarea class="form-control-modern" id="respuesta" name="respuesta" rows="5" placeholder='{"message": "Hello World"}'></textarea>
        </div>

        <!-- Destino Proxy -->
        <div class="form-group-modern" id="divDestino" style="display: none;">
          <label class="form-label-modern" for="destinoProxy">URL Destino</label>
          <input type="text" class="form-control-modern" id="destinoProxy" name="destinoProxy" placeholder="https://api.example.com">
          <small style="color: var(--text-muted); margin-top: 0.5rem; display: block;">
            Ejemplo: Si ruta es <code style="color: var(--primary);">/fake-api/</code> y destino es <code style="color: var(--primary);">https://api.example.com</code>,
            una peticion a <code style="color: var(--primary);">/fake-api/users</code> se enviara a <code style="color: var(--primary);">https://api.example.com/users</code>
          </small>
        </div>

        <!-- Archivo -->
        <div class="form-group-modern" id="divFile" style="display: none;">
          <label class="form-label-modern" for="fileUpload">Archivo a devolver</label>
          <div class="file-upload-wrapper">
            <input type="file" class="form-control-modern" id="fileUpload" name="fileUpload" onchange="handleFileSelect(event)">
            <div id="fileInfo" class="file-info" style="display: none;">
              <i class="fa fa-file"></i>
              <span id="fileName"></span>
              <span id="fileSize" class="file-size"></span>
              <button type="button" class="btn-file-remove" onclick="clearFileSelection()" title="Quitar archivo">
                <i class="fa fa-times"></i>
              </button>
            </div>
            <div id="currentFileInfo" class="current-file-info" style="display: none;">
              <i class="fa fa-check-circle" style="color: var(--success);"></i>
              <span>Archivo actual: </span>
              <strong id="currentFileName"></strong>
              <span id="currentFileSize" class="file-size"></span>
            </div>
          </div>
          <small style="color: var(--text-muted); margin-top: 0.5rem; display: block;">
            El archivo se devolverá con el Content-Type apropiado según su extensión.
          </small>
        </div>

        <!-- Espera Activa -->
        <div class="alert-modern alert-modern-warning" id="divEsperaActiva">
          <i class="fa fa-pause-circle alert-icon" aria-hidden="true"></i>
          <div class="alert-content">
            <div class="alert-title">Modo Espera Activa</div>
            <div class="alert-text">Las peticiones se pausaran hasta que las liberes manualmente desde "Lista Pendientes".</div>
          </div>
          <label class="switch-modern" for="esperaActiva">
            <input type="checkbox" id="esperaActiva" name="esperaActiva">
            <span class="slider"></span>
          </label>
        </div>

        <!-- Ruta Activa -->
        <div class="alert-modern alert-modern-info" id="divActivo">
          <i class="fa fa-power-off alert-icon" aria-hidden="true"></i>
          <div class="alert-content">
            <div class="alert-title">Ruta Activa</div>
            <div class="alert-text">Si esta desactivada, las peticiones no seran interceptadas por esta ruta.</div>
          </div>
          <label class="switch-modern" for="rutaActiva">
            <input type="checkbox" id="rutaActiva" name="rutaActiva" checked>
            <span class="slider"></span>
          </label>
        </div>

        <!-- Headers Personalizados -->
        <div class="collapsible-section" id="divHeaders" style="margin-top: 1.25rem;">
          <div class="collapsible-header" onclick="toggleHeadersSection()">
            <h4><i class="fa fa-list-ul"></i> Headers Personalizados</h4>
            <button type="button" class="btn-modern btn-modern-success" onclick="event.stopPropagation(); addHeaderRow()">
              <i class="fa fa-plus"></i> Añadir
            </button>
          </div>
          <div class="collapsible-body">
            <small style="color: var(--text-muted); margin-bottom: 1rem; display: block;">
              <strong>Set:</strong> Añade o sobreescribe el header |
              <strong>Remove:</strong> Elimina el header de la respuesta
            </small>
            <div id="headersContainer">
              <!-- Headers dinamicos aqui -->
            </div>
            <div id="noHeadersMsg" class="empty-state" style="padding: 1rem;">
              <i class="fa fa-inbox"></i>
              <p>No hay headers configurados</p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-modern btn-modern-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn-modern btn-modern-primary" id="botonguardar" onclick="guardar()">
          <i class="fa fa-save"></i> Guardar
        </button>
        <button type="button" class="btn-modern btn-modern-warning" id="botoneditar" onclick="editar()">
          <i class="fa fa-edit"></i> Actualizar
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Lista Pendientes -->
<div class="modal fade modal-modern" id="modalLista" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titleModalList"><i class="fa fa-clock-o me-2"></i>Lista de Pendientes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="pendingListContainer">
          <% listaEspera.forEach(function(element) { %>
          <div class="pending-item" id="pl-<%= element.id %>"
               data-id="<%= element.id %>"
               data-response="<%= element.defaultResponse || '' %>"
               data-type="<%= element.tiporespuesta || 'json' %>"
               data-code="<%= element.codigo || 200 %>"
               data-headers="<%= element.customHeaders || '{}' %>">
            <div class="pending-item-header">
              <div class="pending-item-info">
                <span class="pending-item-url"><%= element.url %></span>
                <span class="pending-item-date"><%= element.date %></span>
              </div>
              <div class="pending-item-actions">
                <button class="btn-icon btn-icon-primary" onclick="togglePendingResponse('<%= element.id %>')" title="Editar respuesta">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </button>
                <button class="btn-icon btn-icon-success" onclick="iniciaTarea('<%= element.id %>')" title="Liberar">
                  <i class="fa fa-play" aria-hidden="true"></i>
                </button>
              </div>
            </div>
            <div class="pending-item-response" id="pr-<%= element.id %>" style="display: none;">
              <div class="pending-response-row">
                <div class="form-group-modern pending-code-group">
                  <label class="form-label-modern" for="prc-<%= element.id %>">Código</label>
                  <input type="number" class="form-control-modern" id="prc-<%= element.id %>" name="prc-<%= element.id %>" value="<%= element.codigo || 200 %>" min="100" max="599">
                </div>
                <div class="form-group-modern pending-type-group">
                  <label class="form-label-modern" for="prtype-<%= element.id %>">Tipo</label>
                  <select class="form-control-modern" id="prtype-<%= element.id %>" name="prtype-<%= element.id %>" onchange="togglePendingFormatBtn('<%= element.id %>')">
                    <option value="json" <%= element.tiporespuesta === 'json' ? 'selected' : '' %>>JSON</option>
                    <option value="xml" <%= element.tiporespuesta === 'xml' ? 'selected' : '' %>>XML</option>
                    <option value="soap" <%= element.tiporespuesta === 'soap' ? 'selected' : '' %>>SOAP</option>
                    <option value="text" <%= element.tiporespuesta === 'text' ? 'selected' : '' %>>Texto</option>
                    <option value="html" <%= element.tiporespuesta === 'html' ? 'selected' : '' %>>HTML</option>
                  </select>
                </div>
              </div>
              <div class="form-group-modern">
                <label class="form-label-modern" for="prt-<%= element.id %>">Body de respuesta</label>
                <textarea class="form-control-modern" id="prt-<%= element.id %>" name="prt-<%= element.id %>" rows="6" placeholder="Dejar vacío para usar la respuesta por defecto"><%= element.defaultResponse || '' %></textarea>
              </div>
              <div class="form-group-modern">
                <label class="form-label-modern" for="prh-<%= element.id %>">Headers personalizados (JSON)</label>
                <textarea class="form-control-modern" id="prh-<%= element.id %>" name="prh-<%= element.id %>" rows="3" placeholder='{"Content-Type": "application/json"}'><%= element.customHeaders || '' %></textarea>
              </div>
              <div class="pending-response-actions">
                <button class="btn-modern btn-modern-secondary btn-sm" onclick="resetPendingResponse('<%= element.id %>')">
                  <i class="fa fa-undo"></i> Restaurar
                </button>
                <button class="btn-modern btn-modern-primary btn-sm" id="prfmt-<%= element.id %>" onclick="formatPendingContent('<%= element.id %>')" style="<%= !['json', 'xml', 'soap', 'html'].includes(element.tiporespuesta) ? 'display:none' : '' %>">
                  <i class="fa fa-align-left"></i> Formatear
                </button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% if (listaEspera.length === 0) { %>
        <div class="empty-state" id="pendingEmptyState">
          <i class="fa fa-check-circle"></i>
          <p>No hay peticiones pendientes</p>
        </div>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-modern btn-modern-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

