<!-- Modal Importar OpenAPI -->
<div class="modal fade modal-modern" id="importOpenApiModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fa fa-upload me-2"></i><%= __('import.title') %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <!-- Step 1: Input -->
        <div id="importStep1">
          <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item">
              <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#importTabFile" type="button">
                <i class="fa fa-file"></i> <%= __('import.uploadFile') %>
              </button>
            </li>
            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#importTabUrl" type="button">
                <i class="fa fa-link"></i> URL
              </button>
            </li>
            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#importTabPaste" type="button">
                <i class="fa fa-paste"></i> <%= __('import.pasteContent') %>
              </button>
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane fade show active" id="importTabFile">
              <div class="form-group-modern">
                <label class="form-label-modern"><%= __('import.specFile') %></label>
                <input type="file" class="form-control-modern" id="importSpecFile" accept=".json,.yaml,.yml">
                <small style="color: var(--text-muted);"><%= __('import.fileFormats') %></small>
              </div>
            </div>
            <div class="tab-pane fade" id="importTabUrl">
              <div class="form-group-modern">
                <label class="form-label-modern"><%= __('import.specUrl') %></label>
                <input type="url" class="form-control-modern" id="importSpecUrl" placeholder="<%= __('import.specUrlPlaceholder') %>">
                <small style="color: var(--text-muted);"><%= __('import.specUrlHelp') %></small>
              </div>
            </div>
            <div class="tab-pane fade" id="importTabPaste">
              <div class="form-group-modern">
                <label class="form-label-modern"><%= __('import.pasteSpec') %></label>
                <textarea class="form-control-modern" id="importSpecContent" rows="8" placeholder="<%= __('import.pastePlaceholder') %>"></textarea>
              </div>
              <div class="form-group-modern">
                <label class="form-label-modern"><%= __('import.specFormat') %></label>
                <select class="form-control-modern form-select-modern" id="importSpecFormat">
                  <option value="auto"><%= __('import.autoDetect') %></option>
                  <option value="json">JSON</option>
                  <option value="yaml">YAML</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group-modern" style="margin-top: 1rem;">
            <label class="form-label-modern"><%= __('import.basePath') %></label>
            <div style="display: flex; align-items: center; gap: 0;">
              <span style="padding: 0.5rem 0.75rem; background: var(--bg-tertiary); border: 1px solid var(--border-color); border-right: none; border-radius: 8px 0 0 8px; color: var(--text-secondary);">/</span>
              <input type="text" class="form-control-modern" id="importBasePath" placeholder="<%= __('import.basePathPlaceholder') %>" style="border-radius: 0 8px 8px 0;">
            </div>
            <small style="color: var(--text-muted);"><%= __('import.basePathHelp') %></small>
          </div>

          <div class="form-group-modern">
            <label class="form-label-modern"><%= __('import.conflictStrategy') %></label>
            <select class="form-control-modern form-select-modern" id="importConflictStrategy">
              <option value="skip"><%= __('import.skipExisting') %></option>
              <option value="overwrite"><%= __('import.overwriteExisting') %></option>
            </select>
          </div>
        </div>

        <!-- Step 2: Preview -->
        <div id="importStep2" style="display: none;">
          <div class="alert-modern alert-modern-info" id="importSpecInfo" style="margin-bottom: 1rem;">
            <i class="fa fa-info-circle alert-icon"></i>
            <div class="alert-content">
              <div class="alert-title" id="importSpecTitle"></div>
              <div class="alert-text" id="importSpecDetails"></div>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <input type="checkbox" id="importSelectAll" checked onchange="toggleAllImportRoutes(this.checked)">
              <label for="importSelectAll" style="cursor: pointer;"><%= __('import.selectAll') %></label>
              <span id="importSelectedCount" class="ms-2" style="color: var(--text-secondary);"></span>
            </div>
          </div>

          <div style="max-height: 400px; overflow-y: auto; border: 1px solid var(--border-color); border-radius: 8px;">
            <table class="table-modern" style="width: 100%; margin: 0;">
              <thead>
                <tr>
                  <th style="width: 40px;"></th>
                  <th><%= __('table.method') %></th>
                  <th><%= __('table.route') %></th>
                  <th><%= __('table.code') %></th>
                  <th><%= __('import.description') %></th>
                  <th><%= __('import.status') %></th>
                </tr>
              </thead>
              <tbody id="importRoutesPreview"></tbody>
            </table>
          </div>
        </div>

        <!-- Loading -->
        <div id="importLoading" style="display: none; text-align: center; padding: 2rem;">
          <i class="fa fa-spinner fa-spin fa-2x"></i>
          <p style="margin-top: 1rem;"><%= __('import.parsing') %></p>
        </div>

        <!-- Error -->
        <div id="importError" class="alert-modern alert-modern-danger" style="display: none;">
          <i class="fa fa-exclamation-triangle alert-icon"></i>
          <div class="alert-content">
            <div class="alert-title"><%= __('import.errorTitle') %></div>
            <div class="alert-text" id="importErrorMsg"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-modern btn-modern-secondary" data-bs-dismiss="modal"><%= __('buttons.cancel') %></button>
        <button type="button" class="btn-modern btn-modern-primary" id="importPreviewBtn" onclick="previewImport()">
          <i class="fa fa-eye"></i> <%= __('import.preview') %>
        </button>
        <button type="button" class="btn-modern btn-modern-secondary" id="importBackBtn" onclick="importGoBack()" style="display: none;">
          <i class="fa fa-arrow-left"></i> <%= __('import.back') %>
        </button>
        <button type="button" class="btn-modern btn-modern-primary" id="importConfirmBtn" onclick="confirmImport()" style="display: none;">
          <i class="fa fa-download"></i> <%= __('import.importRoutes') %>
        </button>
      </div>
    </div>
  </div>
</div>
